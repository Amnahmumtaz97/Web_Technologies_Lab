
<section>
  <h2>Edit Product</h2>
  <form method="post" action="/admin/products/<%= product._id %>?_method=PUT">
    <label>Name <input required name="name" value="<%= product.name %>"></label>
    <label>Price <input required name="price" type="number" step="0.01" value="<%= product.price %>"></label>
    <label>Category <input required name="category" value="<%= product.category %>"></label>
    <label>Image URL <input name="image" value="<%= product.image %>"></label>
    <label>Description <textarea name="description"><%= product.description %></textarea></label>
    <button type="submit">Update</button>
  </form>
</section>
