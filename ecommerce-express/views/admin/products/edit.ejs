<section class="product-form-section">
  <div class="product-form-card">
    <h2>Edit Product</h2>
    <form
      method="post"
      action="/admin/products/<%= product._id %>?_method=PUT"
      class="product-form"
      enctype="multipart/form-data"
    >
      <label
        >Name
        <input
          required
          name="name"
          value="<%= product.name %>"
          class="input-field"
      /></label>
      <label
        >Price
        <input
          required
          name="price"
          type="number"
          step="0.01"
          value="<%= product.price %>"
          class="input-field"
      /></label>
      <label
        >Category
        <input
          required
          name="category"
          value="<%= product.category %>"
          class="input-field"
      /></label>
      <label
        >Change Image
        <input type="file" name="image" accept="image/*" class="input-field"
      /></label>
      <label
        >Description
        <textarea name="description" class="input-field">
<%= product.description %></textarea
        >
      </label>
      <button type="submit" class="btn btn-primary">Update</button>
    </form>
  </div>
</section>
