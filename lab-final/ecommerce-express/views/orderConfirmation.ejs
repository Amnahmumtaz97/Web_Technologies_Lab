<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
  body {
    background: #f8fafc;
  }
  .card {
    border-radius: 1rem;
    box-shadow: 0 2px 16px rgba(33, 150, 243, 0.08);
    margin-top: 2rem;
  }
  .table {
    background: #fff;
    border-radius: 0.5rem;
    box-shadow: 0 2px 8px rgba(79,6,76,0.08);
    margin-bottom: 0;
  }
  .table th {
    background: #f3e6fa;
    color: #4f064c;
    font-weight: 600;
    font-size: 1.05em;
  }
  .table td {
    font-size: 1em;
    vertical-align: middle;
  }
  .badge {
    font-size: 1em;
    padding: 0.5em 1em;
    border-radius: 0.5em;
  }
  .text-primary {
    color: #3b82f6 !important;
  }
  .text-success {
    color: #27ae60 !important;
  }
  .text-muted {
    color: #888 !important;
  }
</style>
<div class="container py-5" style="min-height:80vh;">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      <div class="card border-0 shadow-lg rounded-4">
        <div class="card-header text-center" style="background: linear-gradient(90deg, #2196f3 0%, #21cbf3 100%); color: #fff; border-top-left-radius: 1rem; border-top-right-radius: 1rem;">
          <h2 class="mb-0" style="font-family: 'Segoe UI', sans-serif; letter-spacing: 1px;">Order Confirmation</h2>
        </div>
        <div class="card-body p-4">
          <div class="mb-4">
            <p class="fs-5 text-success">Your order has been placed successfully!</p>
            <table class="table table-bordered mb-4">
              <tbody>
                <tr><th>Order ID</th><td class="text-primary"><%= order._id %></td></tr>
                <tr><th>Date</th><td><%= order.createdAt.toLocaleString() %></td></tr>
                <tr><th>Name</th><td><%= order.customerName %></td></tr>
                <tr><th>Email</th><td><%= order.email %></td></tr>
                <tr><th>Total Amount</th><td class="text-success">$<%= order.totalAmount %></td></tr>
                <tr><th>Status</th><td><span class="badge <%= order.status==='Pending'?'bg-warning text-dark':order.status==='Confirmed'?'bg-success':'bg-danger' %>"><%= order.status %></span></td></tr>
              </tbody>
            </table>
          </div>
          <h4 class="mb-3">Items:</h4>
          <div class="table-responsive">
            <table class="table table-bordered align-middle">
              <thead class="table-light">
                <tr>
                  <th>Product ID</th>
                  <th>Quantity</th>
                  <th>Price</th>
                </tr>
              </thead>
              <tbody>
                <% order.cartItems.forEach(item => { %>
                  <tr>
                    <td><%= item.product %></td>
                    <td><%= item.quantity %></td>
                    <td>$<%= item.price %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
